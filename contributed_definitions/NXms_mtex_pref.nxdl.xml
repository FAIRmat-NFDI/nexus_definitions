<definition xmlns="http://definition.nexusformat.org/nxdl/3.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" category="base" type="group" name="NXms_mtex_pref" extends="NXobject" xsi:schemaLocation="http://definition.nexusformat.org/nxdl/3.1 ../nxdl.xsd">
    <doc>
         Base class to store the configuration when using the MTex/Matlab software.
         
         MTex is a Matlab package for texture analysis used in the Materials and Earth Sciences.
         See `R. Hielscher et al. &lt;https://mtex-toolbox.github.io/publications&gt;`_ and
         the `MTex source code &lt;https://github.com/mtex-toolbox&gt;`_ for details.
    </doc>
    <group name="conventions" type="NXcollection">
        <doc>
             Reference frame and orientation conventions.
             Consult the `MTex docs &lt;https://mtex-toolbox.github.io/EBSDReferenceFrame.html&gt;`_ for details.
        </doc>
        <field name="x_axis_direction"/>
        <!--enumeration:-->
        <field name="z_axis_direction"/>
        <!--enumeration:-->
        <field name="a_axis_direction"/>
        <!--enumeration:-->
        <field name="b_axis_direction"/>
        <!--enumeration:-->
        <field name="euler_angle">
            <enumeration>
                <item value="unknown"/>
                <item value="undefined"/>
                <item value="bunge"/>
            </enumeration>
        </field>
    </group>
    <group name="plotting" type="NXcollection">
        <doc>
             Settings relevant for generating plots.
        </doc>
        <field name="font_size" type="NX_FLOAT" units="NX_ANY"/>
        <field name="inner_plot_spacing" type="NX_FLOAT" units="NX_ANY"/>
        <field name="outer_plot_spacing" type="NX_FLOAT" units="NX_ANY"/>
        <field name="marker_size" type="NX_FLOAT" units="NX_ANY"/>
        <field name="figure_size"/>
        <field name="show_micron_bar" type="NX_BOOLEAN">
            <doc>
                 Render scale bar within generated figures.
            </doc>
        </field>
        <field name="show_coordinates" type="NX_BOOLEAN">
            <doc>
                 Render grid within generated figures.
            </doc>
        </field>
        <field name="pf_anno_fun_hdl">
            <doc>
                 Code for the function handle used for annotating pole figure plots.
            </doc>
        </field>
        <field name="color_map" type="NX_FLOAT" units="NX_UNITLESS">
            <dimensions rank="2">
                <dim index="1" value="i"/>
                <dim index="2" value="3"/>
            </dimensions>
        </field>
        <field name="default_color_map" type="NX_FLOAT" units="NX_UNITLESS">
            <dimensions rank="2">
                <dim index="1" value="i"/>
                <dim index="2" value="3"/>
            </dimensions>
        </field>
        <!--phase_color_order:
  dim: (i,)-->
        <field name="color_palette"/>
        <field name="degree_char"/>
        <field name="arrow_char"/>
        <field name="marker"/>
        <field name="marker_edge_color"/>
        <field name="marker_face_color"/>
        <field name="hit_test" type="NX_BOOLEAN"/>
    </group>
    <group name="miscellaneous" type="NXcollection">
        <doc>
             Miscellaneous other settings of MTex.
        </doc>
        <field name="mosek" type="NX_BOOLEAN"/>
        <field name="generating_help_mode" type="NX_BOOLEAN"/>
        <field name="methods_advise" type="NX_BOOLEAN"/>
        <field name="stop_on_symmetry_mismatch" type="NX_BOOLEAN"/>
        <field name="inside_poly" type="NX_BOOLEAN"/>
        <field name="text_interpreter"/>
    </group>
    <group name="numerics" type="NXcollection">
        <doc>
             Miscellaneous settings relevant for numerics.
        </doc>
        <field name="eps" type="NX_FLOAT" units="NX_UNITLESS">
            <doc>
                 Return value of the Matlab eps command.
            </doc>
        </field>
        <field name="fft_accuracy" type="NX_FLOAT" units="NX_ANY"/>
        <field name="max_stwo_bandwidth" type="NX_FLOAT" units="NX_ANY"/>
        <field name="max_sothree_bandwidth" type="NX_FLOAT" units="NX_ANY"/>
    </group>
    <group name="system" type="NXcollection">
        <doc>
             Miscellaneous settings relevant of the system where MTex runs.
        </doc>
        <field name="memory" type="NX_FLOAT"/>
        <field name="open_gl_bug" type="NX_BOOLEAN"/>
        <field name="save_to_file" type="NX_BOOLEAN"/>
    </group>
    <group name="path" type="NXcollection">
        <doc>
             Collection of paths from where MTex reads information and code.
        </doc>
        <field name="mtex"/>
        <field name="data"/>
        <field name="cif"/>
        <field name="ebsd"/>
        <field name="pf"/>
        <field name="odf"/>
        <field name="tensor"/>
        <field name="example"/>
        <field name="import_wizard"/>
        <field name="pf_extensions">
            <doc>
                 List of file type suffixes for which MTex assumes texture/pole figure
                 information.
            </doc>
        </field>
        <field name="ebsd_extensions">
            <doc>
                 List of file type suffixes for which MTex assumes EBSD content.
            </doc>
        </field>
    </group>
    <!--version as an instance of (NXprogram) one for MTex one for Matlab-->
</definition>
