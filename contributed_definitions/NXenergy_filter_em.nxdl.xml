more discussion-->
<definition xmlns="http://definition.nexusformat.org/nxdl/3.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" category="base" type="group" name="NXenergy_filter_em" extends="NXcomponent_em" xsi:schemaLocation="http://definition.nexusformat.org/nxdl/3.1 ../nxdl.xsd">
    <doc>
         Base class for improving energy resolution in an electron microscope.
         
         Examples are Wien, $\textalpha$-, or $\Omega$- energy filter.
    </doc>
    <!--user perspective-->
    <field name="applied" type="NX_BOOLEAN">
        <doc>
             Was the corrector used?
        </doc>
    </field>
    <field name="type" type="NX_CHAR">
        <doc>
             Qualitative type of the component.
        </doc>
        <enumeration>
            <item value="wien_filter"/>
            <item value="alfa_filter"/>
            <item value="omega_filter"/>
        </enumeration>
    </field>
    <!--control level perspective
technical components of the corrector-->
    <field name="dispersion" type="NX_NUMBER" units="NX_ANY">
        <doc>
             Energy dispersion in e.g. Âµm/eV.
        </doc>
    </field>
    <group type="NXlens_em"/>
    <group type="NXaperture_em"/>
    <group type="NXdeflector"/>
    <group type="NXcrystal"/>
</definition>
