<definition xmlns="http://definition.nexusformat.org/nxdl/3.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" category="base" type="group" name="NXapplied_stress" extends="NXexternal_stimulus" xsi:schemaLocation="http://definition.nexusformat.org/nxdl/3.1 ../nxdl.xsd">
    <symbols>
        <symbol name="n_stress">
            <doc>
                 number of values in applied stress
            </doc>
        </symbol>
    </symbols>
    <doc>
         External field to control mechanical stress of a sample
    </doc>
    <field name="stress" type="NX_FLOAT" units="NX_ANY">
        <doc>
             Applied stress. Could a a single float value for static value or  
             an array of field strengths at different times and positions. 
             In that case it should log to a value_log in NXsensor.
        </doc>
        <dimensions>
            <!--could be any length-->
            <dim index="1" value="n_stress"/>
        </dimensions>
        <attribute name="direction">
            <enumeration>
                <item value="x"/>
                <item value="y"/>
                <item value="z"/>
            </enumeration>
        </attribute>
    </field>
    <group name="stress_sensor" type="NXsensor">
        <doc>
             For external stress.
        </doc>
        <field name="measurement" type="NX_CHAR">
            <enumeration>
                <item value="stress"/>
            </enumeration>
        </field>
    </group>
</definition>
