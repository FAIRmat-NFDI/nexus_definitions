<definition xmlns="http://definition.nexusformat.org/nxdl/3.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" category="base" type="group" name="NXunit_cell" extends="NXobject" xsi:schemaLocation="http://definition.nexusformat.org/nxdl/3.1 ../nxdl.xsd">
    <doc>
         Description of a unit cell, e.g. of a single crystalline material.
    </doc>
    <field name="class" type="NX_CHAR">
        <doc>
             In case it is all we know and we want to record/document it
        </doc>
        <enumeration>
            <item value="triclinic"/>
            <item value="monoclinic"/>
            <item value="orthorhombic"/>
            <item value="tetragonal"/>
            <item value="rhombohedral"/>
            <item value="hexagonal"/>
            <item value="cubic"/>
        </enumeration>
    </field>
    <field name="space_group" type="NX_CHAR">
        <doc>
             Crystallographic space group
        </doc>
    </field>
    <field name="point_group" type="NX_CHAR">
        <doc>
             Crystallographic point group, deprecated if space_group presents
        </doc>
    </field>
    <field name="abc" type="NX_FLOAT" units="NX_LENGTH">
        <doc>
             Crystallography unit cell parameters a, b, and c
        </doc>
        <dimensions>
            <dim index="1" value="3"/>
        </dimensions>
    </field>
    <field name="alphabetagamma" type="NX_FLOAT" units="NX_ANGLE">
        <doc>
             Crystallography unit cell parameters alpha, beta, and gamma
        </doc>
        <dimensions>
            <dim index="1" value="3"/>
        </dimensions>
    </field>
    <field name="volume" type="NX_FLOAT" units="NX_VOLUME">
        <doc>
             Volume of the unit cell
        </doc>
        <dimensions rank="1">
            <dim index="1" value="3"/>
        </dimensions>
    </field>
</definition>
