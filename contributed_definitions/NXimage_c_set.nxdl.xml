<definition xmlns="http://definition.nexusformat.org/nxdl/3.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" category="base" type="group" name="NXimage_c_set" extends="NXimage_set" xsi:schemaLocation="http://definition.nexusformat.org/nxdl/3.1 ../nxdl.xsd">
    <symbols>
        <symbol name="n_images">
            <doc>
                 Number of images in the stack.
            </doc>
        </symbol>
        <!--n_k: |
  Number of pixel per image in the slow direction.-->
        <symbol name="n_j">
            <doc>
                 Number of pixel per image in the slow direction.
            </doc>
        </symbol>
        <!--fast direction-->
        <symbol name="n_i">
            <doc>
                 Number of pixel per image in the fastest direction.
            </doc>
        </symbol>
    </symbols>
    <doc>
         Specialized base class container for reporting a set of images in reciprocal
         space.
    </doc>
    <!--details about the FFT library used could for instance be stored in the
NXprocess group which the NXimage_c_set base class can borrow from its
NXimage_set parent base class
process information are composable from the NXimage_set base class-->
    <group name="stack" type="NXdata">
        <doc>
             Image (stack).
        </doc>
        <field name="real" type="NX_FLOAT" units="NX_UNITLESS">
            <doc>
                 Image intensity of the real part.
            </doc>
            <dimensions rank="3">
                <dim index="1" value="n_images"/>
                <dim index="2" value="n_j"/>
                <dim index="3" value="n_i"/>
            </dimensions>
        </field>
        <field name="imag" type="NX_FLOAT" units="NX_UNITLESS">
            <doc>
                 Image intensity of the imaginary part.
            </doc>
            <dimensions rank="3">
                <dim index="1" value="n_images"/>
                <dim index="2" value="n_j"/>
                <dim index="3" value="n_i"/>
            </dimensions>
        </field>
        <!--how to handle 1d, 3d cases? | (n_images, n_k, n_j, n_i) | (n_images, n_i)
alternatively use a pair of numbers from R encoding real and imaginary part-->
        <field name="magnitude" type="NX_FLOAT" units="NX_UNITLESS">
            <doc>
                 Magnitude of the image intensity.
            </doc>
            <dimensions rank="3">
                <dim index="1" value="n_images"/>
                <dim index="2" value="n_j"/>
                <dim index="3" value="n_i"/>
            </dimensions>
        </field>
        <field name="axis_image_identifier" type="NX_UINT" units="NX_UNITLESS">
            <doc>
                 Image identifier
            </doc>
            <dimensions rank="1">
                <dim index="1" value="n_images"/>
            </dimensions>
            <attribute name="long_name">
                <doc>
                     Image identifier.
                </doc>
            </attribute>
        </field>
        <field name="axis_k" type="NX_FLOAT" units="NX_ANY">
            <!--NX_RECIPROCAL_LENGTH-->
            <doc>
                 Pixel coordinate center along k direction.
            </doc>
            <dimensions rank="1">
                <dim index="1" value="n_k"/>
            </dimensions>
            <attribute name="long_name">
                <doc>
                     Coordinate along j direction.
                </doc>
            </attribute>
        </field>
        <field name="axis_j" type="NX_FLOAT" units="NX_ANY">
            <!--NX_RECIPROCAL_LENGTH-->
            <doc>
                 Pixel coordinate center along j direction.
            </doc>
            <dimensions rank="1">
                <dim index="1" value="n_j"/>
            </dimensions>
            <attribute name="long_name">
                <doc>
                     Coordinate along j direction.
                </doc>
            </attribute>
        </field>
        <field name="axis_i" type="NX_FLOAT" units="NX_ANY">
            <!--NX_RECIPROCAL_LENGTH-->
            <doc>
                 Pixel coordinate center along i direction.
            </doc>
            <dimensions rank="1">
                <dim index="1" value="n_i"/>
            </dimensions>
            <attribute name="long_name">
                <doc>
                     Coordinate along i direction.
                </doc>
            </attribute>
        </field>
    </group>
</definition>
