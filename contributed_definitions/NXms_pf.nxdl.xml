<definition xmlns="http://definition.nexusformat.org/nxdl/3.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" category="base" type="group" name="NXms_pf" extends="NXprocess" xsi:schemaLocation="http://definition.nexusformat.org/nxdl/3.1 ../nxdl.xsd">
    <symbols>
        <symbol name="n_y">
            <doc>
                 Number of pixel per pole figure in the slow direction.
            </doc>
        </symbol>
        <symbol name="n_x">
            <doc>
                 Number of pixel per pole figure in the fast direction.
            </doc>
        </symbol>
    </symbols>
    <doc>
         Base class to store a pole figure computation.
    </doc>
    <group name="configuration" type="NXobject">
        <doc>
             Details about the algorithm which computed the pole figure.
        </doc>
        <field name="crystal_symmetry_point_group">
            <doc>
                 Point group of the crystal structure of the phase for which the
                 here documented phase-dependent pole figure was computed.
            </doc>
        </field>
        <field name="specimen_symmetry_point_group">
            <doc>
                 Point group assumed for processing induced *sample symmetries*.
            </doc>
        </field>
        <field name="halfwidth" type="NX_FLOAT" units="NX_ANGLE">
            <doc>
                 Halfwidth of the kernel.
            </doc>
        </field>
        <field name="miller_indices">
            <doc>
                 Miller indices to specify the pole figure.
            </doc>
        </field>
        <field name="phase_identifier" type="NX_POSINT">
            <doc>
                 Identifier of e.g. an instance NXem_ebsd_crystal_structure_model
                 from which the orientation set was composed to compute the here
                 shown phase-dependent pole figure.
            </doc>
        </field>
        <field name="phase_name">
            <doc>
                 Name of e.g. an instance NXem_ebsd_crystal_structure_model
                 from which the orientation set was composed to compute the here
                 shown phase-dependent pole figure.
            </doc>
        </field>
        <field name="resolution" type="NX_FLOAT" units="NX_ANGLE">
            <doc>
                 Resolution of the kernel.
            </doc>
        </field>
    </group>
    <group name="pf_plot" type="NXdata">
        <doc>
             Pole figure.
        </doc>
        <!--\@signal: intensity
\@axes: [axis_y, axis_x]
\@axis_x_indices: 0
\@axis_y_indices: 1-->
        <field name="intensity" type="NX_FLOAT" units="NX_UNITLESS">
            <!--hehe, but can be larger than one but could also be an NX_DIMENSIONLESS !-->
            <doc>
                 Pole figure intensity.
            </doc>
            <dimensions rank="2">
                <dim index="1" value="n_y"/>
                <dim index="2" value="n_x"/>
            </dimensions>
        </field>
        <field name="axis_y" type="NX_FLOAT" units="NX_LENGTH">
            <doc>
                 Pixel center along y direction in the equatorial plane of
                 a stereographic projection of the unit sphere.
            </doc>
            <dimensions rank="1">
                <dim index="1" value="n_y"/>
            </dimensions>
            <attribute name="long_name">
                <doc>
                     Coordinate along y direction.
                </doc>
            </attribute>
        </field>
        <field name="axis_x" type="NX_NUMBER" units="NX_LENGTH">
            <doc>
                 Pixel center along x direction in the equatorial plane of
                 a stereographic projection of the unit sphere.
            </doc>
            <dimensions rank="1">
                <dim index="1" value="n_x"/>
            </dimensions>
            <attribute name="long_name">
                <doc>
                     Coordinate along x direction.
                </doc>
            </attribute>
        </field>
    </group>
</definition>
