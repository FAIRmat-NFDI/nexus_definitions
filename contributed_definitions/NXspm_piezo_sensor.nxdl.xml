<definition xmlns="http://definition.nexusformat.org/nxdl/3.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" category="base" type="group" name="NXspm_piezo_sensor" extends="NXsensor" xsi:schemaLocation="http://definition.nexusformat.org/nxdl/3.1 ../nxdl.xsd">
    <doc>
        This piezo sensor group refers to the height (or Z) piezo sensor.
    </doc>
    <field name="x" type="NX_NUMBER" units="NX_LENGTH">
        <doc>
            The x position of the piezo.
        </doc>
    </field>
    <field name="y" type="NX_NUMBER" units="NX_LENGTH">
        <doc>
            The y position of the piezo.
        </doc>
    </field>
    <field name="z" type="NX_NUMBER" units="NX_LENGTH">
        <doc>
            The z position of the piezo.
        </doc>
    </field>
    <group name="piezo_configuration" type="NXspm_piezo_config">
        <doc>
            The piezo configuration information like piezoelectric calibration and material
            properties.
        </doc>
        <group name="calibration_parameters" type="NXparameter" optional="true">
            <group name="calibration" type="NXcalibration">
                <doc>
                    Calibration of the piezo device.
                </doc>
            </group>
        </group>
    </group>
    <group type="NXspm_positioner" nameType="any">
        <doc>
            The positioner information like the position of the tip, the position of the
            sample, PID controller etc.
        </doc>
    </group>
    <group name="piezo_material" type="NXspm_piezoelectric_material">
        <doc>
            The material description and properties of the piezoelectric scanner materials.
        </doc>
    </group>
</definition>
