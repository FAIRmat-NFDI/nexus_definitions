<definition xmlns="http://definition.nexusformat.org/nxdl/3.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" category="base" type="group" name="NXgas_environment" extends="NXexternal_stimulus" xsi:schemaLocation="http://definition.nexusformat.org/nxdl/3.1 ../nxdl.xsd">
    <symbols>
        <symbol name="n_components">
            <doc>
                 number of gas phase components
            </doc>
        </symbol>
        <symbol name="n_pressure">
            <doc>
                 number of values in gas phase pressure
            </doc>
        </symbol>
    </symbols>
    <doc>
         Gas phase environment around a sample.
    </doc>
    <field name="gases" type="NX_CHAR">
        <doc>
             List of constituent gases.
        </doc>
    </field>
    <field name="density" type="NX_FLOAT" units="NX_MASS_DENSITY">
        <doc>
             Overall density of the gas phase
        </doc>
    </field>
    <field name="concentration" type="NX_FLOAT" units="NX_UNITLESS">
        <doc>
             Concentration of each gas phase component
        </doc>
        <dimensions rank="1">
            <dim index="1" value="n_comp"/>
        </dimensions>
    </field>
    <field name="volume_fraction" type="NX_FLOAT" units="NX_UNITLESS">
        <doc>
             Volume fraction of each gas phase component
        </doc>
        <dimensions rank="1">
            <dim index="1" value="n_comp"/>
        </dimensions>
    </field>
    <field name="pressure" type="NX_FLOAT" units="NX_PRESSURE">
        <doc>
             Gas phase pressure. Could a a single float value for static pressure or  
             an array of pressures at different times and positions. 
             In that case it should log to a value_log in NXsensor.
        </doc>
        <dimensions>
            <!--could be any length-->
            <dim index="1" value="n_pressure"/>
        </dimensions>
        <attribute name="direction">
            <enumeration>
                <item value="x"/>
                <item value="y"/>
                <item value="z"/>
            </enumeration>
        </attribute>
    </field>
    <group name="manometer" type="NXsensor">
        <field name="measurement" type="NX_CHAR">
            <enumeration>
                <item value="pressure"/>
            </enumeration>
        </field>
    </group>
</definition>
